@model NDKFastfood.Models.NhanVien
@{
    ViewBag.Title = "ChiTietNV";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center; font-weight: bold; margin-bottom: 30px;">Chi tiết nhân viên</h2>

<div style="padding-left:70px">
    <dl class="dl-horizontal">
        <dt>
            Mã nhân viên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNV)
        </dd>

        <dt>
            Họ tên nhân viên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNV)
        </dd>

        <dt>
            Giới tính:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>

        <dt>
            Ngày sinh:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>

        <dt>
            Số điện thoại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>

        <dt>
            Địa chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Chức vụ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChucVu)
        </dd>

        <dt>
            Lương cơ bản:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Luong)
        </dd>

        <dt>
            Ngày bắt đầu làm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayBatDauLam)
        </dd>
    </dl>
</div>
<div>
    <a style="font-weight:bold;color:black;padding-left:70px" href="@Url.Action("NhanVien","Admin")"><i class="fa fa-arrow-left"> Trở lại</i></a>
    <a style="font-weight:bold;color:black;padding-left:30px" href="@Url.Action("SuaNV","Admin", new { id = Model.MaNV })"><i class="fa fa-edit"> Chỉnh sửa</i></a>
</div>


