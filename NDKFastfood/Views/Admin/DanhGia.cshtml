@using NDKFastfood.Models
@using PagedList.Mvc;
@model PagedList.PagedList<NDKFastfood.Models.DanhGia>

@{
    ViewBag.Title = "DanhGia";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center; font-weight: bold; margin-bottom: 30px;">Quản lý thông tin đánh giá của khách hàng</h2>
<a style="font-size:20px;color:black;padding-left:100px;" href="@Url.Action("ThemDanhGia","Admin")"><i class="fa fa-plus-circle"> Thêm mới</i></a>
<br />
<table align="center" border="2" cellpadding="10" style="margin-top:20px">
    <tr align="center" , style="height:50px">
        <th style="width:230px;color:red;font-size:20px">Mã đánh giá</th>
        <th style="width:150px;color:red;font-size:20px">Mã món ăn</th>
        <th style="width:150px;color:red;font-size:20px">Mã khách hàng</th>
        <th style="width:175px;color:red;font-size:20px">Nội dung đánh giá</th>
        <th style="width:250px;color:red;font-size:20px">Ngày đánh giá</th>
        <th style="width:250px;color:red;font-size:20px">Công cụ</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr align="center" , style="height:50px">
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.MaDG)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.MaMon)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.MaKH)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.NgayDanhGia)
            </td>
            <td>
                <a style="font-size:20px;color:black" href="@Url.Action("SuaDG","Admin", new { id = item.MaDG })"><i class="fa fa-edit"> Sửa</i></a>
                <br />
                <a style="font-size:20px;color:black" href="@Url.Action("ChiTietDG","Admin", new { id = item.MaDG })"><i class="fa fa-info-circle"> Chi tiết</i></a>
                <br />
                <a style="font-size:20px;color:black" href="@Url.Action("XoaDG","Admin", new { id = item.MaDG })"><i class="fa fa-trash"> Xóa</i></a>
            </td>
        </tr>
    }
</table>
<div style="padding-left:1375px;font-size:20px;padding-top:10px;font-weight:bold;">
    @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
    <div class="product__pagination">
        @Html.PagedListPager(Model, page => Url.Action("DanhGia", new { page = page }))
    </div>
</div>

