@model NDKFastfood.Models.DonDatHang

@{
    ViewBag.Title = "XoaDDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center; font-weight: bold; margin-bottom: 30px;">Xóa đơn đặt hàng</h2>

<div style="padding-left:70px">
    <dl class="dl-horizontal">
        <dt>
            Mã đơn hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaDonHang)
        </dd>
        <dt>
            Mã khách hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaKH)
        </dd>
        <dt>
            Tên khách hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KhachHang.HoTen)
        </dd>
        <dt>
            Ngày đặt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayDat)
        </dd>
        <dt>
            Ngày giao:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayGiao)
        </dd>
        <div style="display:flex;flex-direction:column;">
            <dt>
                Tình trạng giao hàng:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TinhTrangGiaohang)
            </dd>
        </div>
        <div style="display:flex;flex-direction:column;">
            <dt>
                Đã thanh toán:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DaThanhToan)
            </dd>
        </div>
    </dl>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <a style="font-weight:bold;color:black;" href="@Url.Action("DonDatHang","Admin")"><i class="fa fa-arrow-left"> Trở lại</i></a>
                <button style="font-weight: bold; color: black; margin-left: 30px;" type="submit"><i class="fa fa-trash"> Xóa</i></button>
            </div>
        }
    </div>
</div>
