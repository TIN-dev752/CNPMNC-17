@model NDKFastfood.Models.NhanVien
@{
    ViewBag.Title = "XoaNV";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center; font-weight: bold; margin-bottom: 30px;">Xóa nhân viên</h2>

<div style="padding-left:70px">
    <dl class="dl-horizontal">
        <dt>
            Họ tên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNV)
        </dd>

        <dt>
            Giới tính:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>

        <dt>
            Ngày sinh:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>

        <dt>
            Số điện thoại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>

        <dt>
            Địa chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Chức vụ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChucVu)
        </dd>

        <dt>
            Lương cơ bản:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Luong)
        </dd>

        <dt>
            Ngày bắt đầu làm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayBatDauLam)
        </dd>
    </dl>
</div>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a style="font-weight:bold;color:black;padding-left:70px" href="@Url.Action("NhanVien","Admin")"><i class="fa fa-arrow-left"> Trở lại</i></a>
            <button style="font-weight: bold; color: black; margin-left: 30px; " type="submit"><i class="fa fa-trash"> Xóa</i></button>
        </div>
    }
</div>

