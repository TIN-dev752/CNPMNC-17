@model NDKFastfood.Models.DanhGia

@{
    ViewBag.Title = "SuaDG";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 style="text-align: center; font-weight: bold; margin-bottom: 30px;">Điều chỉnh thông tin đánh giá về sản phẩm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDG)
        <div class="form-group">
            <div class="row" style="width:100%">
                <div class="col-md-7">
                    <h5 style="font-weight:bold;padding-left:120px;padding-bottom:5px">Mã món ăn:</h5>
                    <div class="col-md-6" style="padding-left:120px">
                        @Model.MaMon
                    </div>
                </div>
                <div class="col-md-5">
                    <h5 style="font-weight:bold;padding-left:30px;padding-bottom:5px">Mã khách hàng:</h5>
                    <div class="col-md-4" style="padding-left: 30px">
                        @Model.MaKH
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row" style="width:100%">
                <div class="col-md-7">
                    <h5 style="font-weight:bold;padding-left:120px;padding-bottom:5px">Ngày đặt:</h5>
                    <div style="padding-left: 120px">
                        @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-5">
                    <h5 style="font-weight:bold;padding-left:30px;padding-bottom:5px">Ngày giao:</h5>
                    <div class="col-md-3" style="padding-left: 30px">
                        @Model.NgayDanhGia
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row" style="width: 100%; margin-top: 30px;">
                <div class="col-md-7">
                    <a style="font-weight:bold;color:black;padding-left:120px" href="@Url.Action("DanhGia","Admin")"><i class="fa fa-arrow-left"> Trở lại</i></a>
                </div>
                <div class="col-md-5">
                    <div class="col-md-offset-2 col-md-10" style="padding-left: 30px">
                        <button style="font-weight: bold; color: black " type="submit"><i class="fa fa-save"> Lưu</i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



