@using NDKFastfood.Models
@using PagedList.Mvc;
@model PagedList.PagedList<NDKFastfood.Models.NhanVien>

@{
    ViewBag.Title = "NhanVien";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center; font-weight: bold; margin-bottom: 30px;">Quản lý thông tin nhân viên</h2>
<a style="font-size:20px;color:black;padding-left:100px;" href="@Url.Action("ThemNhanVien","Admin")"><i class="fa fa-plus-circle"> Thêm mới</i></a>
<br />
<table align="center" border="2" cellpadding="10" style="margin-top:20px">
    <tr align="center" , style="height:50px">
        <th style="width:230px;color:red;font-size:20px">Họ và tên</th>
        <th style="width:150px;color:red;font-size:20px">Giới tính</th>
        <th style="width:150px;color:red;font-size:20px">Ngày sinh</th>
        <th style="width:175px;color:red;font-size:20px">Địa chỉ</th>
        <th style="width:250px;color:red;font-size:20px">Số điện thoại</th>
        <th style="width:150px;color:red;font-size:20px">Email</th>
        <th style="width:175px;color:red;font-size:20px">Chức vụ</th>
        <th style="width:150px;color:red;font-size:20px">Lương</th>
        <th style="width:150px;color:red;font-size:20px">Ngày bắt đầu làm</th>
        <th style="width:150px;color:red;font-size:20px">Công cụ</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr align="center", style="height:50px">
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.TenNV)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.ChucVu)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.Luong)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.NgayBatDauLam)
            </td>
            <td>
                <a style="font-size:20px;color:black" href="@Url.Action("SuaNV","Admin", new { id = item.MaNV })"><i class="fa fa-edit"> Sửa</i></a>
                <br />
                <a style="font-size:20px;color:black" href="@Url.Action("ChiTietNV","Admin", new { id = item.MaNV })"><i class="fa fa-info-circle"> Chi tiết</i></a>
                <br />
                <a style="font-size:20px;color:black" href="@Url.Action("XoaNV","Admin", new { id = item.MaNV })"><i class="fa fa-trash"> Xóa</i></a>
            </td>
        </tr>
     }
</table>
<div style="padding-left:1375px;font-size:20px;padding-top:10px;font-weight:bold">
    @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
    <div class="product__pagination">
        @Html.PagedListPager(Model, page => Url.Action("NhanVien", new { page = page }))
    </div>
</div>




