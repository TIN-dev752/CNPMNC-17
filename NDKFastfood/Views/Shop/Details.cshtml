
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .fixed-size {
        width: 100%;
        max-width: 100%;
        height: 120px;
        resize: none;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .fixed-size:focus {
        outline: none;
        border-color: #FF6600; 
        box-shadow: 0px 2px 6px rgba(255, 102, 0, 0.5);
    }

    .comments-list {
        max-height: 250px;
        min-height: 120px;
        overflow-y: auto;
        border: 1px solid #ccc;
        padding: 10px;
        background-color: #f9f9f9;
        border-radius: 5px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .comments-list ul {
        list-style: none; 
        margin: 0;
        padding: 0;
    }

    .comments-list li {
        border-bottom: 1px solid #eee;
        margin-bottom: 10px;
        padding-bottom: 10px;
    }

    .comments-list li:last-child {
        border-bottom: none; 
    }

    .comments-list strong {
        font-weight: bold;
        color: #FF6600; 
    }

    .comments-list p {
        margin: 5px 0 0; 
        font-size: 14px;
        color: #555;
    }
</style>

<!-- Hero Section End -->
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/Assets/Images/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Thông tin chi tiết</h2>
                    <div class="breadcrumb__option">
                        <a href="@Url.Action("Index", "Home")">Trang chủ</a>
                        <span>Thông tin chi tiết</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src="@Url.Content("~/Assets/Images/"+Model.AnhDD)" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.TenMon</h3>
                    <div class="product__details__rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                    </div>
                    <div class="product__details__price">@Model.GiaBan vnđ</div>
                    <p>
                        @Model.NoiDung
                    </p>
                    <a href="@Url.Action("ThemGioHang", "GioHang", new { @iMaMon = Model.MaMon, @strURL = Request.Url.ToString() })" class="primary-btn">THÊM VÀO GIỎ HÀNG</a>
                    <ul>
                        <li><b>Kho</b> <span>@Model.SoLuongTon</span></li>
                        <li><b>Giao hàng</b> <span>Miễn phí giao hàng hóa đơn trên 350k</span></li>
                        <li><b>Cân nặng</b> <span>0.5 kg</span></li>
                        <li>
                            <b>Chia sẻ</b>
                            <div class="share">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                            </div>
                        </li>
                    </ul>
                </div>  
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6" style="margin-top: 60px;">
                <div class="add-comment">
                    <p style="font-size: 20px; color: black; font-weight: bold;">Comments</p>
                    <form method="post" action="@Url.Action("ThemDanhGia", "Shop")" style="display: flex; flex-direction: column;">
                        <input type="hidden" name="MaMon" value="@Model.MaMon" />
                        <textarea id="commentContent" name="commentContent" class="fixed-size" placeholder="Đưa ra cảm nhận về sản phẩm..."></textarea>
                        <button id="btnSubmit" class="btn-primary" style="width: max-content; border: none; outline: none; background-color: #FF6600; padding: 5px;">Gửi đánh giá</button>
                    </form>
                </div>
            </div>
            @Html.Action("XemDanhGia", "Shop", new { mamon = Model.MaMon })
        </div>
    </div>
</section>

