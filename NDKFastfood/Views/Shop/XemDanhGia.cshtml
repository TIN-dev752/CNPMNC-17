<div class="col-lg-6 col-md-6 col-sm-6" style="margin-top: 60px;">
    <p style="font-size: 20px; color: black; font-weight: bold;">Các đánh giá sản phẩm</p>
    <div class="comments-list">
        <ul id="comments">
            @foreach (var item in Model)
            {
                <li>
                    <i class="fa fa-user" style="margin-right: 10px;"></i><strong>@item.HoTen</strong>
                    <span style="float: right; font-size: 12px; color: #888;">(@item.NgayDanhGia.ToString("dd/MM/yyyy"))</span>
                    <p>@item.NoiDung</p>
                </li>
            }
        </ul>
    </div>
</div>
